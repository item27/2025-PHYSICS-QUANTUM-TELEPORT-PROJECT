# Build stage
FROM golang:1.24-alpine AS builder

WORKDIR /app

# Cache dependencies
COPY go.mod go.sum ./
RUN go mod download

# Copy source and build
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /bin/server ./cmd/server

# Runtime stage
FROM alpine:3.20
WORKDIR /app
ENV PORT=8080
COPY --from=builder /bin/server /bin/server
EXPOSE 8080
CMD ["/bin/server"]
